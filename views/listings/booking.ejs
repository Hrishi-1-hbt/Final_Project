<% layout("/layouts/boilerplate") %>

<h1>Book Listing: <%= listing.title %></h1>

<form action="/listings/<%= listing._id %>/book" method="POST">
  <label for="dateFrom">Start Date:</label>
  <input type="date" name="booking[dateFrom]" required>

  <label for="dateTo">End Date:</label>
  <input type="date" name="booking[dateTo]" required>

  <button type="submit" class="btn btn-success mt-3">Confirm Booking</button>
</form>
